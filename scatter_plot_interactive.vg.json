{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "title": "Murders by Youth vs Drug-relatd Crimes (2001)",
  "data": {
    "url": "murder_by_youths.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Murders > 0"},
    {"filter": "datum.DrugRelated > 0"},
    {"filter": "datum.Population > Population_Above"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    },
    {
      "calculate": "datum.Murders/datum.Population * 1000000",
      "as": "Murders by Youths per million Population"
    }
  ],
  "encoding": {
    
    "x": {
      "field": "Murders",
      "type": "quantitative",
      "title": "Murders Committed by Youths",
      "axis": {"tickCount": 5},
      "scale": {"type": "log", "domain": [1, 100000]}
    },
    "y": {
      "field": "DrugRelated",
      "type": "quantitative",
      "title": "Drug Related Crimes",
      "axis": {"tickCount": 5},
      "scale": {"type": "log", "domain": [10, 1000000]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [50, 100, 200, 300, 400, 500]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "Murders", "title": "Murders by Youths", "type": "quantitative", "format": ","},
          {"field": "DrugRelated", "title": "Drug related crimes", "type": "quantitative", "format": ","}

        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Colombia' || datum['Country'] == 'Mexico' || datum['Country'] == 'Australia' || datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "Murders", "title": "Murders by Youths", "type": "quantitative", "format": ","},
          {"field": "DrugRelated", "title": "Drug related crimes", "type": "quantitative", "format": ","}
         
        ]
      }
    }
  ]
}